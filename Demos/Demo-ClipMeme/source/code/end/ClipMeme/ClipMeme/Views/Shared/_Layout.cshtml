<!DOCTYPE html>
<html itemscope itemtype="http://schema.org/WebSite">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1000, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="Clip Meme">
    <title>Clip Meme</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="app" ng-controller="maincontroller">
    <!-- header -->
    <header class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><span class="logo">Clip</span><span class="logo emphasis">Meme</span></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <!-- search -->
                <form class="navbar-form navbar-left ng-pristine ng-valid" role="search" action="#">
                    <div class="form-group search-form">
                        <input class="form-control search-box" type="text" placeholder="Search">
                        <i class="glyphicon glyphicon-search"></i>
                        <span class="input-icon fui-search"></span>
                    </div>
                </form>

                <!-- create meme btn -->
                <button class="btn btn-default btn-primary navbar-btn btn-sm" type="button" ng-click="openModal();">
                    <span class="glyphicon glyphicon-plus"></span> Create a Meme
                </button>

                <!-- dropdown -->
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown">Mads<b class="caret"></b></a>
                        <span class="dropdown-arrow"></span>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">My Profile</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#">Logout</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <!-- footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @if (!System.String.IsNullOrEmpty(System.Configuration.ConfigurationManager.AppSettings["TrafficManagerRegion"])) { <p style="text-align:center; font-style:italic; font-size:20px;">You are being served from <b>@System.Configuration.ConfigurationManager.AppSettings["TrafficManagerRegion"]</b></p> }
                    <p style="text-align:center;">Copyright &copy; 2014 ClipMeme.</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/signalr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/Scripts/app/app.js")
    @Scripts.Render("~/bundles/angular-app-controllers")
    @Scripts.Render("~/bundles/angular-app-directives")
    @Scripts.Render("~/bundles/angular-app-services")
    @RenderSection("scripts", required: false)
    @Html.Partial("~/Views/Shared/Modal.cshtml")
    <script type="text/javascript">
        $(function () {
            $("body").on("dragover dragstart dragenter drop", false);
        });
    </script>
</body>
</html>
