@{
    ViewBag.Title = "ClipMeme Login";
    Layout = "";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<!-- logo -->
<div class="container">
    <div class="row">
    </div>
    <div class="container">
        <!-- sign in with clipmeme -->
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="tile">
                    <div class="logo-panel">
                        <span class="logo x2">Clip</span><span class="logo emphasis x2">Meme</span>
                    </div>
                    <h6 style="text-align:center;">Sign in with your ClipMeme account.</h6>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="text" class="form-control" />
                    </div>
                    <a class="btn btn-primary btn-lg pull-right" href="#">Sign in</a>
                </div>
            </div>
            <div class="col-md-3">
            </div>
        </div>

        <hr>

        <!-- sign in with social network -->
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6" style="text-align:center;">
                <h6>Or sign in with your social network.</h6>
                <a href="#"><img src="/Content/images/fb_48.png" alt="Facebook"></a>
                <a href="#"><img src="/Content/images/twitter_48.png" alt="Twitter"></a>
                <a href="#"><img src="/Content/images/google_48.png" alt="Google+"></a>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
</div>
<!-- footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p style="text-align:center;">Copyright &copy; 2014 ClipMeme.</p>
            </div>
        </div>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
