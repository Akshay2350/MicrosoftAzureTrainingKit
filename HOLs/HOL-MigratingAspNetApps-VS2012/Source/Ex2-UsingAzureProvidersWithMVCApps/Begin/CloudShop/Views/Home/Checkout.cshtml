@{
    ViewBag.Title = "Cloud Shop Checkout";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Your Order</h1>
            </hgroup>
        </div>
    </section>
}

<label for="cart">You have selected the following products:</label>

@using (Html.BeginForm("Remove", "Home", FormMethod.Post, new { id = "removeProductForm" }))
{
    <p>
        <select name="selectedItem" class="product-list" id="items" size="4">
        @foreach (string product in ViewData.Model)
        {
            <option value="@product">@product</option>
        }
        </select>
    </p>
    <p>
        <a href="javascript:document.getElementById('removeProductForm').submit();">Remove product from cart</a>
    </p>
}